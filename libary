local function FuzkiLib()
    local InsideFuzki = {}

    function InsideFuzki:CreateWindow(title)
        -- Variables
        local UserInputService = game:GetService("UserInputService")

        -- Main GUI Components
        local uiScreen = Instance.new("ScreenGui")
        local mainFrame = Instance.new("Frame")
        local mainCorner = Instance.new("UICorner")
        local tabFrame = Instance.new("Frame")
        local tabCorner = Instance.new("UICorner")
        local tabList = Instance.new("UIListLayout")
        local titleFrame = Instance.new("Frame")
        local titleCorner = Instance.new("UICorner")
        local titleLabel = Instance.new("TextLabel")
        local closeButton = Instance.new("TextButton")
        local deleteButton = Instance.new("TextButton")

        -- Initialize UI Screen
        uiScreen.Name = "uiScreen"
        uiScreen.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
        uiScreen.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

        -- Main Frame Configuration
        mainFrame.Name = "mainFrame"
        mainFrame.Parent = uiScreen
        mainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
        mainFrame.Position = UDim2.new(0.3, 0, 0.2, 0)
        mainFrame.Size = UDim2.new(0, 580, 0, 350)
        mainFrame.ClipsDescendants = true

        -- Main Corner
        mainCorner.CornerRadius = UDim.new(0, 3)
        mainCorner.Name = "mainCorner"
        mainCorner.Parent = mainFrame

        -- Title Frame
        titleFrame.Name = "titleFrame"
        titleFrame.Parent = mainFrame
        titleFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        titleFrame.Size = UDim2.new(0, 580, 0, 30)

        -- Title Corner
        titleCorner.CornerRadius = UDim.new(0, 3)
        titleCorner.Name = "titleCorner"
        titleCorner.Parent = titleFrame

        -- Title Label
        titleLabel.Name = "titleLabel"
        titleLabel.Parent = titleFrame
        titleLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        titleLabel.BackgroundTransparency = 1.000
        titleLabel.Size = UDim2.new(0, 200, 0, 30)
        titleLabel.Font = Enum.Font.GothamSemibold
        titleLabel.Text = title
        titleLabel.TextColor3 = Color3.fromRGB(197, 197, 197)
        titleLabel.TextSize = 14.000
        titleLabel.TextXAlignment = Enum.TextXAlignment.Left

        -- Close Button
        closeButton.Name = "closeButton"
        closeButton.Parent = titleFrame
        closeButton.BackgroundColor3 = Color3.fromRGB(255, 56, 60)
        closeButton.Size = UDim2.new(0, 50, 0, 30)
        closeButton.Position = UDim2.new(1, -100, 0, 0)
        closeButton.Font = Enum.Font.GothamSemibold
        closeButton.Text = "Close"
        closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        closeButton.TextSize = 14.000

        -- Delete Button
        deleteButton.Name = "deleteButton"
        deleteButton.Parent = titleFrame
        deleteButton.BackgroundColor3 = Color3.fromRGB(255, 56, 60)
        deleteButton.Size = UDim2.new(0, 50, 0, 30)
        deleteButton.Position = UDim2.new(1, -50, 0, 0)
        deleteButton.Font = Enum.Font.GothamSemibold
        deleteButton.Text = "Delete"
        deleteButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        deleteButton.TextSize = 14.000

        -- Close Button Logic
        closeButton.MouseButton1Click:Connect(function()
            mainFrame.Visible = not mainFrame.Visible
        end)

        -- Delete Button Logic
        deleteButton.MouseButton1Click:Connect(function()
            uiScreen:Destroy()
        end)

        -- Make Frame Draggable
        local dragging
        local dragInput
        local dragStart
        local startPos

        local function update(input)
            local delta = input.Position - dragStart
            mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end

        mainFrame.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                dragging = true
                dragStart = input.Position
                startPos = mainFrame.Position

                input.Changed:Connect(function()
                    if input.UserInputState == Enum.UserInputState.End then
                        dragging = false
                    end
                end)
            end
        end)

        mainFrame.InputChanged:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
                dragInput = input
            end
        end)

        UserInputService.InputChanged:Connect(function(input)
            if input == dragInput and dragging then
                update(input)
            end
        end)

        -- Tab Frame Configuration
        tabFrame.Name = "tabFrame"
        tabFrame.Parent = mainFrame
        tabFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        tabFrame.Position = UDim2.new(0.02, 0, 0.1, 0)
        tabFrame.Size = UDim2.new(0, 120, 0, 310)

        -- Tab Corner
        tabCorner.CornerRadius = UDim.new(0, 3)
        tabCorner.Name = "tabCorner"
        tabCorner.Parent = tabFrame

        -- Tab List
        tabList.Name = "tabList"
        tabList.Parent = tabFrame
        tabList.SortOrder = Enum.SortOrder.LayoutOrder
        tabList.Padding = UDim.new(0, 5)

        -- Element Folder
        local elementFolder = Instance.new("Folder")
        elementFolder.Name = "elementFolder"
        elementFolder.Parent = mainFrame

        -- Create Tab
        function InsideFuzki:CreateTab(name)
            local tabButton = Instance.new("TextButton")
            local tabCorner = Instance.new("UICorner")

            -- Configure Tab Button
            tabButton.Name = "tabButton"..name
            tabButton.Parent = tabFrame
            tabButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            tabButton.Size = UDim2.new(0, 120, 0, 30)
            tabButton.Font = Enum.Font.GothamSemibold
            tabButton.Text = name
            tabButton.TextColor3 = Color3.fromRGB(218, 218, 218)
            tabButton.TextSize = 14.000

            -- Configure Tab Corner
            tabCorner.CornerRadius = UDim.new(0, 3)
            tabCorner.Name = "tabCorner"
            tabCorner.Parent = tabButton

            local elementContainer = Instance.new("ScrollingFrame")
            local elementList = Instance.new("UIListLayout")

            -- Configure Element Container
            elementContainer.Name = "elementContainer"..name
            elementContainer.Parent = elementFolder
            elementContainer.Active = true
            elementContainer.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            elementContainer.BackgroundTransparency = 1.000
            elementContainer.BorderSizePixel = 0
            elementContainer.Size = UDim2.new(0, 410, 0, 300)
            elementContainer.Position = UDim2.new(0.3, 0, 0.1, 0)
            elementContainer.CanvasSize = UDim2.new(0, 0, 0, 0)
            elementContainer.ScrollBarThickness = 3
            elementContainer.Visible = false

            -- Configure Element List
            elementList.Name = "elementList"..name
            elementList.Parent = elementContainer
            elementList.SortOrder = Enum.SortOrder.LayoutOrder
            elementList.Padding = UDim.new(0, 5)

            tabButton.MouseButton1Click:Connect(function()
                for i, v in next, elementFolder:GetChildren() do
                    v.Visible = false
                end
                elementContainer.Visible = true
                for i, v in next, tabFrame:GetChildren() do
                    if v:IsA("TextButton") then
                        v.TextColor3 = Color3.fromRGB(218, 218, 218)
                    end
                end
                tabButton.TextColor3 = Color3.fromRGB(255, 56, 60)
            end)

            -- Default to the first tab
            if #tabFrame:GetChildren() == 3 then
                elementContainer.Visible = true
                tabButton.TextColor3 = Color3.fromRGB(255, 56, 60)
            end

            -- Button Element
            function InsideFuzki:CreateButton(tab, name, callback)
                local buttonElement = Instance.new("TextButton")
                local buttonCorner = Instance.new("UICorner")

                callback = callback or function() end

                -- Configure Button Element
                buttonElement.Name = "buttonElement"..name
                buttonElement.Parent = elementContainer
                buttonElement.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
                buttonElement.Size = UDim2.new(0, 120, 0, 30)
                buttonElement.Font = Enum.Font.GothamSemibold
                buttonElement.Text = name
                buttonElement.TextColor3 = Color3.fromRGB(218, 218, 218)
                buttonElement.TextSize = 14.000

                -- Configure Button Corner
                buttonCorner.CornerRadius = UDim.new(0, 3)
                buttonCorner.Name = "buttonCorner"
                buttonCorner.Parent = buttonElement

                buttonElement.MouseButton1Click:Connect(function()
                    pcall(callback)
                end)
            end

            return InsideFuzki
        end

        return InsideFuzki
    end

    return InsideFuzki
end

local library = FuzkiLib()

local window = library:CreateWindow("My UI")
local tab1 = window:CreateTab("Tab 1")
local tab2 = window:CreateTab("Tab 2")

tab1:CreateButton("Button 1", function()
    print("Button 1 clicked!")
end)

tab2:CreateButton("Button 2", function()
    print("Button 2 clicked!")
end)
